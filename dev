<?php

/**
 * --------------------------------------------------------------
 * Framework CLI Entry Point
 * --------------------------------------------------------------
 * This script serves as the command line interface for the custom
 * framework. It initializes the application, loads the service
 * container, and triggers execution of console commands such as:
 *
 *   php dev make:controller MyController
 *   php dev make:entity EntityName or with flag -m for migration
 *   php dev migrate
 *   php dev key:generate
 *
 * The CLI integrates with the same application container used by
 * HTTP requests, allowing shared configuration and services.
 */

use Core\Console\Application;

// Bootstrap the application core
$program = require __DIR__ . '/bootstrap/app.php';
$app = $program->bootstrap();

// Initialize the console runner
$cli = new Application($app, BASE_PATH);

// Execute command and return exit code
exit($cli->run($argv));
